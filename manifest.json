{
    "name": "Chameleon",
    "manifest_version": 2,
    "version": "0.0.1",
    "description": "",
    "homepage_url": "https://github.com/globocom/chameleon",
    // "icons": {
    //     "16": "icon16.png",
    //     "48": "icon48.png",
    //     "128": "icon128.png"
    // },
    "options_page": "addeventClick.html",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "icone.png",
        "default_popup": "addeventClick.html"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs"
    ],
    "content_scripts": [{
      "matches": ["*://*/*"],
      "js": ["resize.js"]
    }
    ]
}
