{
    "name": "Chameleon",
    "manifest_version": 2,
    "version": "0.0.1",
    "description": "",
    "homepage_url": "https://github.com/globocom/chameleon",
    "icons": {
        "16": "/icones/mobile_16.png",
        "48": "/icones/mobile_48.png",
        "128": "/icones/mobile_128.png"
    },
    "options_page": "default_popup.html",
    "background": {
        "page": "background.html"
    },
    "browser_action": {
        "default_icon": "/icones/mobile_16.png",
        "default_popup": "default_popup.html"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs"
    ]
}
